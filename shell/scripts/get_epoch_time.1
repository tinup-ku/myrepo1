#!/bin/ksh

echo -n "Enter date in MM/DD/YYYY (for example, 10/12/2019)? "
read yyyymmdd
echo
echo -n "How many output files (2|4|6|8|12)? "
read number

case ${number} in
     "2" )
         start_one=`date --date="${yyyymmdd} 00:00:00" +"%s"`
         end_one=`date --date="${yyyymmdd} 12:00:00" +"%s"`
         end_two=`date --date="${yyyymmdd} 23:59:59" +"%s"`
         echo "$start_one,$end_one"
         echo "$end_one,$end_two"
         ;;
     "4" )
         start_one=`date --date="${yyyymmdd} 00:00:00" +"%s"`
         end_one=`date --date="${yyyymmdd} 06:00:00" +"%s"`
         end_two=`date --date="${yyyymmdd} 12:00:00" +"%s"`
         end_three=`date --date="${yyyymmdd} 18:00:00" +"%s"`
         end_four=`date --date="${yyyymmdd} 23:59:59" +"%s"`
         echo "$start_one,$end_one"
         echo "$end_one,$end_two"
         echo "$end_two,$end_three"
         echo "$end_three,$end_four"
         ;;
     "6" )
         start_one=`date --date="${yyyymmdd} 00:00:00" +"%s"`
         end_one=`date --date="${yyyymmdd} 04:00:00" +"%s"`
         end_two=`date --date="${yyyymmdd} 08:00:00" +"%s"`
         end_three=`date --date="${yyyymmdd} 12:00:00" +"%s"`
         end_four=`date --date="${yyyymmdd} 16:00:00" +"%s"`
         end_five=`date --date="${yyyymmdd} 20:00:00" +"%s"`
         end_six=`date --date="${yyyymmdd} 23:59:59" +"%s"`
         echo "$start_one,$end_one"
         echo "$end_one,$end_two"
         echo "$end_two,$end_three"
         echo "$end_three,$end_four"
         echo "$end_four,$end_five"
         echo "$end_five,$end_six"
         ;;
     "8" )
         start_one=`date --date="${yyyymmdd} 00:00:00" +"%s"`
         end_one=`date --date="${yyyymmdd} 03:00:00" +"%s"`
         end_two=`date --date="${yyyymmdd} 06:00:00" +"%s"`
         end_three=`date --date="${yyyymmdd} 09:00:00" +"%s"`
         end_four=`date --date="${yyyymmdd} 12:00:00" +"%s"`
         end_five=`date --date="${yyyymmdd} 15:00:00" +"%s"`
         end_six=`date --date="${yyyymmdd} 18:00:00" +"%s"`
         end_seven=`date --date="${yyyymmdd} 21:00:00" +"%s"`
         end_eight=`date --date="${yyyymmdd} 23:59:59" +"%s"`
         echo "$start_one,$end_one"
         echo "$end_one,$end_two"
         echo "$end_two,$end_three"
         echo "$end_three,$end_four"
         echo "$end_four,$end_five"
         echo "$end_five,$end_six" 
         echo "$end_six,$end_seven" 
         echo "$end_seven,$end_eight" 
         ;;
     "12" )
         start_one=`date --date="${yyyymmdd} 00:00:00" +"%s"`
         end_one=`date --date="${yyyymmdd} 02:00:00" +"%s"`
         end_two=`date --date="${yyyymmdd} 04:00:00" +"%s"`
         end_three=`date --date="${yyyymmdd} 06:00:00" +"%s"`
         end_four=`date --date="${yyyymmdd} 08:00:00" +"%s"`
         end_five=`date --date="${yyyymmdd} 10:00:00" +"%s"`
         end_six=`date --date="${yyyymmdd} 12:00:00" +"%s"`
         end_seven=`date --date="${yyyymmdd} 14:00:00" +"%s"`
         end_eight=`date --date="${yyyymmdd} 16:00:00" +"%s"`
         end_nine=`date --date="${yyyymmdd} 18:00:00" +"%s"`
         end_ten=`date --date="${yyyymmdd} 20:00:00" +"%s"`
         end_eleven=`date --date="${yyyymmdd} 22:00:00" +"%s"`
         end_twelve=`date --date="${yyyymmdd} 23:59:59" +"%s"`
         echo "$start_one,$end_one"
         echo "$end_one,$end_two"
         echo "$end_two,$end_three"
         echo "$end_three,$end_four"
         echo "$end_four,$end_five"
         echo "$end_five,$end_six"
         echo "$end_six,$end_seven"
         echo "$end_seven,$end_eight"
         echo "$end_eight,$end_nine"
         echo "$end_nine,$end_ten"
         echo "$end_ten,$end_eleven"
         echo "$end_eleven,$end_twelve"
         ;;

     * )
         echo "Wrong choice. Try again."
         exit
         ;;
esac

