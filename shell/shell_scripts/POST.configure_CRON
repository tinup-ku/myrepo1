#!/bin/bash -x
#==============================================================================
#Change Log:
#
# When          Who             What
# ----          ---             ----
# 08.07.2012    J. Wu		Inital script to add /etc/cron.allow to 
#				restrict cron useage per TDA standards
#
#==============================================================================

echo "Configure Cron Restrictions" >> ${INSTLOG}

if [ ! -f /etc/cron.allow ]; then
    touch /etc/cron.allow
fi

exit 0
